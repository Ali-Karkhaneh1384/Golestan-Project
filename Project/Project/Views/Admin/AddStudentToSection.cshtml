@model Project.Models.takes

@{
    ViewData["Title"] = "ثبت‌نام دانشجو در درس";
}

<div class="text-center">
    <div class="register-container">
        <div class="register-header">
            <h2>ثبت‌نام دانشجو در درس</h2>
        </div>

        <form asp-action="AddStudentToSection" method="post" dir="rtl">
            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

            <div class="form-group text-end">
                <label asp-for="student_id">دانشجو</label>
                <select asp-for="student_id" asp-items="ViewBag.Students" class="form-control">
                    <option value="">انتخاب دانشجو</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group text-end">
                <label asp-for="section_id">کلاس درس</label>
                <select asp-for="section_id" asp-items="ViewBag.Sections" class="form-control">
                    <option value="">انتخاب کلاس</option>
                </select>
                <span  class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-4">ثبت‌نام</button>

            <div class="mt-3" style="direction: rtl; text-align: right;">
                <a asp-action="Index">بازگشت</a>
            </div>
        </form>
    </div>
</div>



<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

<style>
    .register-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        max-width: 500px;
        margin: 50px auto;
    }

    .register-header h2 {
        color: #003087;
        margin-bottom: 0.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        margin-bottom: 1rem;
        text-align: right;
    }

    .btn-primary {
        background-color: #003087;
        border: none;
        border-radius: 5px;
        padding: 0.75rem;
        width: 100%;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #00205b;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
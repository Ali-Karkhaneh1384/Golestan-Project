@model Project.Models.courses

@{
    ViewData["Title"] = "ساخت دوره آموزش";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <div class="register-container">
        <div class="register-header">
            <h2>ثبت دوره آموزش جدید</h2>
            <p class="text-muted">لطفا اطلاعات دوره آموزش را وارد نمایید</p>
        </div>

        <form asp-action="CreateCourse" method="post" dir="rtl">
            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>
            <div class="form-group">
                <label asp-for="Title">عنوان</label>
                <input asp-for="Title" class="form-control" required placeholder="عنوان را وارد کنید" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="code">کد درس</label>
                <input asp-for="code" class="form-control" required placeholder="کد درس را وارد کنید" />
                <span  class="text-danger"></span>
            </div>

            <div class="form-group" style="direction: rtl; text-align: right;">
                <label asp-for="unit" >واحد</label>
                <input asp-for="unit" class="form-control" type="number" min="0" placeholder="تعداد واحد را به عدد وارد کنید" />
                <span  class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="description">توضیحات</label>
                <textarea asp-for="description"
                          class="form-control"
                          required
                          placeholder="توضیحات را وارد کنید"
                          rows="5"
                          style="min-height: 120px; resize: vertical;"></textarea>
                <span  class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-4">ایجاد</button>
            <div style="direction: rtl; text-align: right; margin-top: 20px">
                <a href="https://localhost:7256/Admin/Index">بازگشت</a>
            </div>

        </form>
    </div>
</div>

<style>
    .register-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        max-width: 500px;
        margin: 50px auto;
    }

    .register-header h2 {
        color: #003087;
        margin-bottom: 0.5rem;
    }

    .text-muted {
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        margin-bottom: 1rem;
        text-align: right;
    }

    .btn-primary {
        background-color: #003087;
        border: none;
        border-radius: 5px;
        padding: 0.75rem;
        width: 100%;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #00205b;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
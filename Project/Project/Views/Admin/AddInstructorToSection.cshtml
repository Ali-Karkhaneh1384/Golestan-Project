@model Project.Models.teach

@{
    ViewData["Title"] = "انتخاب استاد برای کلاس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <div class="register-container">
        <div class="register-header">
            <h2>انتخاب استاد برای کلاس</h2>
            <p class="text-muted" style="margin-top: 15px">لطفا استاد مورد نظر را انتخاب کنید</p>
        </div>

        <form asp-action="AddInstructorToSection" method="post" dir="rtl">
            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>
            <div class="form-group">
                <div class="form-group" style="direction: rtl; text-align: right;">
                    <label for="section_id">کلاس</label>
                    <select asp-for="section_id" asp-items="ViewBag.SectionList" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group" style="direction: rtl; text-align: right;">
                    <label for="instructor_id">استاد</label>
                    <select asp-for="instructor_id" asp-items="ViewBag.InstructorList" class="form-control"></select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-4">تایید</button>
            <div style="direction: rtl; text-align: right; margin-top: 20px">
                <a href="https://localhost:7256/Admin/Index">بازگشت</a>
            </div>

        </form>
    </div>
</div>

<style>
    .register-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        max-width: 500px;
        margin: 50px auto;
    }

    .register-header h2 {
        color: #003087;
        margin-bottom: 0.5rem;
    }

    .text-muted {
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        margin-bottom: 1rem;
        text-align: right;
    }

    .btn-primary {
        background-color: #003087;
        border: none;
        border-radius: 5px;
        padding: 0.75rem;
        width: 100%;
        font-size: 1.1rem;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #00205b;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.9rem;
    }
</style>
